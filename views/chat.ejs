<body>
 <div class="container">
 
        <style>
            #well1{ display: inline-flex;
             flex-wrap: wrap;
             width: 100%;
              margin: auto;
              justify-content: space-around;}
        </style>
  <div class="row">
   <div class="col-sm-12">
    <div class="well" id="well1" >
    
             <a href="/index"> Ir para o inicio</a>
             <a href="/profile"> Ir para o teu perfil</a>
             <a href="/empresas"> ir para empresas</a>
             <a href="/add">adicionar empresas</a>
             
             <a href="/logout" class="btn btn-danger btn-sm">Sair</a>

    </div>
   </div>
               <style>
                 #imguser2{
                   width: 60px;
                   height: 60px;
                   border-radius: 50%;
                 }
                 .headbox2{
                   display: inline-flex;
                   line-height: 7px;
                 }
                 .datacoment2{
                   font-size: 11px;
                   color: darkgrey;
                 }
                 .mensagemprofile{
                   margin-left: 100px;
                   margin-top: -10px;
                   border-bottom: rgb(206, 204, 204);
                   border-bottom-style: solid;
                   border-bottom-width: 1px;
                 }
                 .nomeedata2{
                   margin-left: 10px;
                 }
                 .well p{color: rgb(152, 160, 160);
                   
                 }

               </style>
      <div class="container1" >
       <div class="col-sm-6">
        <div class="well"  style="overflow: scroll;height: 800px;">
          <p style="color: rgb(152, 160, 160);"> Mensagens</p>
          
          <div class="mensagensProfile" >
            <% if (messages.length > 0) {%>
              <% messages.forEach((message, index) => { %>
            <form action="/messagetoempresa" method="post">
              <div class="form__group" id="sobrenosContato">
                <input type="number"  name="newmessage"   style=" display: none;"  value="1"   required="" >
            </div>
               <input type="text" name="userstart" value="<%= message.userstart%>" style="display: none;" >
              <input type="text" name="mensagem_id" value="<%= message.id%>" style="display: none;" >
              <input type="text" name="empresaname" value="<%= message.empresaname%>" style="display: none;">
              <input type="text" name="empresaid" value="<%= message.empresaid%>" style="display: none;">
              <input type="text" name="empresa_userid" value="<%= message.empresa_userid%>" style="display: none;">
          <textarea type="text" class="form__input" id="comentarioindex" name="mensagem" placeholder="Responde  aqui... "  style="width: 65%; height: 40px; border-style: none;margin-left: 50px;"   ></textarea>
            <input type="submit" value="responder" style="border-style: none; margin-top: 15px; color: rgb(41, 150, 252);">
          </form>
          <br>
          <% }) %>
          <% } else { %>
            <p class="text-center">Não tem mensagens.</p>
          <% } %>
          <% if (chats.length > 0) {%>
            <% chats.forEach((chat, index) => { %>
            <div class="headbox2">
              <div class="fotouser2"><img id="imguser2" src="/imguser/<%= chat.userimage%>" alt=""></div>
              <div class="nomeedata2">
                <span class="nomeusercoment2"><a href=""><h4><%= chat.username%></h4></a></span>
                <span class="datacoment2" ><%= chat.criado_em.toDateString() %></span>
              </div>
            </div>
            <div class="mensagemprofile">
              <h5><%= chat.mensagem %></h5>
            </div>
            <br>
            <% }) %>
            <% } else { %>
              <p class="text-center">Não tem mensagens.</p>
            <% } %>
            


            </div>
              
        </div>
       </div>
       
</body>
</html>